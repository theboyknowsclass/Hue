                                                <Binding Path="IsConnected" Converter="{StaticResource VisibilityConverter}">
                                                    <Binding.ConverterParameter>
                                                        <system:Boolean>False</system:Boolean>
                                                    </Binding.ConverterParameter>
                                                </Binding>
                                            </Path.Visibility>
                                        </Path>
